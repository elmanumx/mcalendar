<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.helloworld"
        version   = "1.0.0">

    <name>Mcalendar</name>

    <description>
        Calendario escolar, para tener un mejor control de tu actividad escolar.
    </description>

    <author href="http://manuelizq.github.io/me" email="ing.manuelizq@gmail.com">
       Emmanuel izquierrdo
    </author>

    <!--
        If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires.
  
    <!-- Define app icon for each platform. -->
    <icon src="favicon/pc.png" />
    <icon src="favicon/pc.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="favicon/pc.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="favicon/pc.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="favicon/pc.png"  gap:platform="android"    gap:qualifier="xhdpi" />
    <icon src="favicon/pc.png" gap:platform="blackberry" />
    <icon src="favicon/pc.png" gap:platform="blackberry" gap:state="hover"/>
    <icon src="favicon/pc.png"        gap:platform="ios"        width="57" height="57" />
    <icon src="favicon/pc.png"        gap:platform="ios"        width="72" height="72" />
    <icon src="favicon/pc.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="favicon/pc.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="favicon/pc.png"      gap:platform="webos" />
    <icon src="favicon/pc.png"  gap:platform="winphone" />
    <icon src="favicon/pc.png" gap:platform="winphone"   gap:role="background" />

    

    <access origin="*"/>
    <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>